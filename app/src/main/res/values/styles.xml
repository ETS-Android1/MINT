<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomStyle" parent="@android:style/TextAppearance.Small">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ButtonText" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/button_text</item>
    </style>

    <style name="bold" >
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="BottomStyleBig">BottomStyleBig
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>