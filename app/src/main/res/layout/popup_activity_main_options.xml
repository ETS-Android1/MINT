<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/option_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg_popup"
    android:paddingTop="15dp"
    android:paddingBottom="20dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    tools:context=".controller.MainActivity">

    <TextView
        android:id="@+id/choix_du_critere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingBottom="10dp"
        android:text="@string/criteria_choice"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fastest"
        style="@style/Button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/choix_du_critere"
        android:layout_alignStart="@+id/option_separation_2"
        android:layout_alignLeft="@+id/option_separation_2"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-60dp"
        android:layout_marginRight="-60dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:text="@string/fastest"
        android:textAppearance="@style/ButtonText"
        android:textColor="@null" />

    <Button
        android:id="@+id/healthier"
        style="@style/Button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/choix_du_critere"
        android:layout_alignEnd="@+id/option_separation_2"
        android:layout_alignRight="@+id/option_separation_2"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="4dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:text="@string/healthier"
        android:textAppearance="@style/ButtonText"
        android:textColor="@null"/>

    <TextView
        android:id="@+id/option_transportation_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fastest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingBottom="10dp"
        android:text="@string/option_transportation_prompt"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/transportation_icons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/option_transportation_prompt"
        android:layout_alignLeft="@id/option_transportation_prompt"
        android:layout_alignEnd="@id/option_transportation_prompt"
        android:layout_alignRight="@id/option_transportation_prompt"
        android:layout_below="@id/option_transportation_prompt">

        <ImageButton
            android:id="@+id/car_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:scaleType="center"
            android:src="@drawable/button_car"
            android:contentDescription="@string/car_choice"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@color/Transparent_Profile_PopupMain"/>
        <ImageButton
            android:id="@+id/tram_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:scaleType="center"
            android:src="@drawable/button_tram"
            android:contentDescription="@string/tram_choice"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@color/Transparent_Profile_PopupMain"/>
        <ImageButton
            android:id="@+id/bike_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:scaleType="center"
            android:src="@drawable/button_bike"
            android:contentDescription="@string/bike_choice"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@color/Transparent_Profile_PopupMain"/>
        <ImageButton
            android:id="@+id/walk_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:scaleType="center"
            android:src="@drawable/button_walk"
            android:contentDescription="@string/walk_choice"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@color/Transparent_Profile_PopupMain"/>

    </LinearLayout>

    <View
        android:id="@+id/option_separation"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_below="@id/transportation_icons"
        android:layout_alignStart="@id/option_calendar_icon"
        android:layout_alignLeft="@id/option_calendar_icon"
        android:layout_alignEnd="@id/end_time"
        android:layout_alignRight="@id/end_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/WhiteGrey_Profile_PopupMain" />


    <View
        android:id="@+id/option_separation_2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_above="@+id/option_transportation_prompt"
        android:layout_alignLeft="@id/option_calendar_icon"
        android:layout_alignRight="@id/end_time"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-10dp"
        android:background="@color/WhiteGrey_Profile_PopupMain"
        android:layout_alignStart="@id/option_calendar_icon"
        android:layout_alignEnd="@id/end_time"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/option_departure_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_below="@id/option_separation"
        android:textStyle="bold"
        android:text="@string/option_departure_prompt" />
    <ImageButton
        android:id="@+id/option_calendar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar"
        android:background="@color/Transparent_Profile_PopupMain"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/option_departure_prompt"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/calendar" />
    <TextView
        android:id="@+id/departure_date_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_prompt"
        android:layout_alignTop="@id/option_calendar_icon"
        android:layout_toRightOf="@id/option_calendar_icon"
        android:layout_toEndOf="@id/option_calendar_icon"/>
    <Button
        android:id="@+id/date_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calendar_date_hint"
        android:layout_alignBottom="@id/option_calendar_icon"
        android:background="@color/Transparent_Profile_PopupMain"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/departure_date_prompt"
        android:layout_toRightOf="@id/option_calendar_icon"
        android:layout_toEndOf="@id/option_calendar_icon"/>
    <ImageButton
        android:id="@+id/option_clock_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_time"
        android:background="@color/Transparent_Profile_PopupMain"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/option_calendar_icon"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/time_prompt" />
    <TextView
        android:id="@+id/departure_time_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_prompt"
        android:layout_alignTop="@id/option_clock_icon"
        android:layout_toRightOf="@id/option_clock_icon"
        android:layout_toEndOf="@id/option_clock_icon"
        android:layout_below="@id/option_calendar_icon"/>
    <Button
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_time"
        android:layout_alignBottom="@id/option_clock_icon"
        android:background="@color/Transparent_Profile_PopupMain"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/departure_time_prompt"
        android:layout_toRightOf="@id/option_clock_icon"
        android:layout_toEndOf="@id/option_clock_icon"/>
    <Button
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button"
        android:textAppearance="@style/ButtonText"
        android:textColor="@null"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_toRightOf="@id/time_text"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/date_calendar"
        android:layout_marginTop="15dp"
        android:text="@string/button_options_start"
        android:layout_toEndOf="@id/time_text"
        android:layout_marginStart="15dp" />
    <Button
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button"
        android:textAppearance="@style/ButtonText"
        android:textColor="@null"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_toRightOf="@id/start_time"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/date_calendar"
        android:layout_marginTop="15dp"
        android:text="@string/button_options_end"
        android:layout_toEndOf="@id/start_time"
        android:layout_marginStart="15dp" />

</RelativeLayout>