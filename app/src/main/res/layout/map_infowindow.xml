<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_infowindow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_info_window"
    android:paddingTop="7dp"
    android:paddingBottom="5dp"
    android:paddingHorizontal="10dp"
    android:orientation="horizontal"
    >


    <RelativeLayout
        android:id="@+id/bus_line_figure_background"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bus_line_background_info_window"
        android:clickable="false"
        android:padding="2dp">

        <TextView
            android:id="@+id/bus_line_figure"
            style="@style/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="7dp"
            android:paddingTop="0dp"
            android:paddingBottom="3dp"
            android:text="16"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bus_line_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Bois St-Lys - HaluchÃ¨re - Batignolles"
        style="@style/bold"
        />


</LinearLayout>